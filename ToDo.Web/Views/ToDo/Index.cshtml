@model IEnumerable<ToDo.Web.Models.Task>
@*@model ToDo.Web.Models.Task*@


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())

{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Tasks</h5>
            <div class="add-items d-flex">
                @Html.ActionLink("Criar Nova Task", "Create",null, new { @class = "btn btn-primary btn-large" })
            </div>
            <div class="list-wrapper">
                <ul class="d-flex flex-column-reverse todo-list">
                    @foreach (var item in Model)
                    {
                    <li>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input class="checkbox" type="checkbox" />
                                @Html.DisplayFor(modelItem => item.title)
                                <i class="input-helper"></i>
                            </label>
                        </div>
                        @*<i class="remove mdi mdi-close-circle-outline"></i>*@
                        @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { @class = "remove" })&nbsp
                        @Html.ActionLink("Detalhes", "Details", new { id = item.id })&nbsp
                        @Html.ActionLink("Apagar", "Delete", new { id = item.id })&nbsp

                    </li>
                    }
                </ul>
            </div>
        </div>
    </div>
}